#!/usr/bin/env bash
# Script: check_whoami.sh
# Description: Runs the whoami command under the user passed as an argument.
# Usage: ./check_whoami.sh <username>

# Check if the username argument is provided
if [ -z "$1" ]; then
  echo "Usage: $0 <username>"
  exit 1
fi

# Get the username from the argument
username="$1"

# Run the whoami command under the specified user
sudo -u "$username" whoami

